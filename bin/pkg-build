#!/usr/bin/env bash

NMDIR="$(cd "$(dirname "$(realpath "${BASH_SOURCE[0]}" )" )" && cd ../../.. && pwd)"

$NMDIR/@stayradiated/pkg/bin/pkg-clean

echo + Building from "$npm_package_srcPath"
echo + Writing to "$npm_package_buildPath"
echo + Extra options: "$@"
$NMDIR/babel-cli/bin/babel.js $npm_package_srcPath --out-dir $npm_package_buildPath "$@"

if [ -d docs ]; then
  echo + Building documentation
  $NMDIR/documentation/bin/documentation.js build -f html -o ./docs $npm_package_srcPath
fi

