{
  "name": "@stayradiated/pkg",
  "version": "3.5.0",
  "description": "Utils for creating, building and testing NPM packages",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "rm -rf ./dist && tsc",
    "test": "npm run build && ava ./dist/**/*.spec.js",
    "lint": "./bin/lint",
    "tidy": "./bin/tidy"
  },
  "bin": {
    "pkg-precommit": "./bin/precommit",
    "pkg-build": "./bin/build",
    "pkg-clean": "./bin/clean",
    "pkg-lint": "./bin/lint",
    "pkg-test": "./bin/test",
    "pkg-tidy": "./bin/tidy"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stayradiated/pkg.git"
  },
  "author": "George Czabania <george@czabania.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/stayradiated/pkg/issues"
  },
  "homepage": "https://github.com/stayradiated/pkg#readme",
  "dependencies": {
    "ava": "2.4.0",
    "chalk": "2.4.2",
    "eslint": "6.6.0",
    "eslint-config-stayradiated": "2.0.0",
    "file-exists": "5.0.1",
    "globby": "10.0.1",
    "husky": "3.0.9",
    "lint-staged": "9.4.2",
    "mkdirp": "0.5.1",
    "pkg-conf": "3.1.0",
    "prettier": "1.18.2",
    "read-pkg-up": "6.0.0",
    "ts-node": "8.4.1",
    "typescript": "3.7.2",
    "unwire": "6.1.0"
  },
  "devDependencies": {
    "@types/mkdirp": "0.5.2",
    "@types/node": "12.12.6",
    "@types/pkg-conf": "3.0.0",
    "@types/read-pkg-up": "6.0.0"
  },
  "release-it": {
    "hooks": {
      "after:bump": "npm run build"
    }
  }
}
